<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="geo_retail_machine_view_form">
            <field name="name">geoengine.demo.retail.machine.form</field>
            <field name="model">geoengine.demo.automatic.retailing.machine</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <field name="name" colspan="4"/>
                    <field name="total_sales"/>
                    <field name="money_level"/>
                    <field name="the_point" colspan="4" widget="text"/>
                    <field name="state"/>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="geo_retail_machine_view_tree">
            <field name="name">geoengine.demo.retail.machine.form</field>
            <field name="model">geoengine.demo.automatic.retailing.machine</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="total_sales" />
                    <field name="money_level" />
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="geo_engine_view_retail_machine_action" model="ir.actions.act_window">
            <field name="name">Retail Machines</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">geoengine.demo.automatic.retailing.machine</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="geo_retail_machine_view_tree"/>
        </record>


        <menuitem name="GeoEngine Demo" id="geoengine_demo_menu"/>
        <menuitem name="Retail machine" id="geoengine_retail_machine_menu"
            action="geo_engine_view_retail_machine_action" parent="geoengine_demo_menu"/>
    </data>
</openerp>
